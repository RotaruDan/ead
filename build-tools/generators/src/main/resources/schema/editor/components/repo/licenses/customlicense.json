{
    "additionalProperties": false,
    "extends": {
        "$ref": "repolicense.json"
    },
    "javaType": "es.eucm.ead.schema.editor.components.repo.licenses.CustomLicense",
    "type": "object",
    "properties":{
        "name":{
            "type": "string",
            "description": "The name of the license (e.g., Paid license)"
        },
        "price":{
