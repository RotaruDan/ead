{
    "additionalProperties": false,
    "javaType": "es.eucm.ead.schema.components.tweens.Tween",
    "type": "object",
    "description": "Base class for tweens",
    "properties": {
        "duration": {
            "type": "number",
            "description": "Time for the tween"
        },
        "delay": {
            "type": "number",
            "default": 0,
            "description": "Time before the tween starts"
        },
        "relative": {
            "type": "boolean",
            "description": "If the tween is relative to the actual value of the tween target. Default is false"
        },
        "repeat": {
            "type": "integer",
            "default": 0,
            "description": "How many times the tween repeats. -1 for forever. Default is 0"
        },
        "repeatDelay": {
            "type": "number",
            "default": 0,
            "description": "Time before the tween starts a repetition"
        },
        "yoyo": {
            "type": "boolean",
            "default": false,
            "description": "If the tween must come back to its initial state"
        },
        "easeEquation": {
            "type": "string",
            "enum": ["linear", "quad", "cubic", "quart", "quint", "circ",
                "sine", "expo", "back", "bounce", "elastic"
            ],
            "default": "linear",
            "description": "Ease equation. Default is linear"
        },
        "easeType": {
            "type": "string",
            "enum": ["in", "out", "inout"],
            "default": "inout",
            "description": "Eas type. Default is inout"
        }

    }
}