{
    "additionalProperties": false,
    "javaType": "es.eucm.ead.schema.components.behaviors.Timer",
    "type": "object",
    "extends": {
        "$ref": "behavior.json"
    },
    "description": "A behavior relates a trigger with an effect.",
    "properties": {
        "time": {
            "type": "number",
            "description": "Seconds waited before triggering"
        },
        "repeat": {
            "type": "integer",
            "description": "How many times the trigger must repeat. If == 0, trigger executes as if == 1; if < 0, it repeats forever.",
            "default": 1
        }
    }
}