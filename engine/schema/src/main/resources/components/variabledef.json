{
    "type": "object",
    "description": "A variable's definition in the game. Its type is the same as the initial value.",
    "javaType": "es.eucm.ead.schema.components.VariableDef",
    "additionalProperties": false,
    "properties": {
        "indexed": {
            "type": "string",
            "description": "Comma-separated list of indexed properties (available for full-text search in editor)",
            "default": "name, initialValue"
        },        
        "name": {
            "type": "string",
            "description": "Name of the variable"
        },
        "type" : {
            "type" : "string",
            "enum": ["string", "float", "integer", "boolean"],
            "description": "One of 'string' 'float' 'integer' 'boolean'"
        },
        "initialValue": {
            "type": "string",
            "description": "Initial value for the variable."
        }
    }
}